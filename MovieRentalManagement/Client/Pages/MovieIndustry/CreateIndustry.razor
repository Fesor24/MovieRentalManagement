@page "/industry/create"

@using MovieRentalManagement.Client.Static
@inject HttpClient _client
@inject NavigationManager navigationManager

<EditForm Model="@industry" OnValidSubmit="AddIndustry">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText class="form-control" @bind-Value=@industry.Name></InputText>
            <ValidationMessage For="@(()=> industry.Name)"></ValidationMessage>
        </div>
       
    </div>

    <button type="submit" class="btn btn-outline-secondary">
        <span class="oi oi-align-right"></span> Add Industry

    </button>

</EditForm>

@code {
    Industry industry = new Industry();

    

    protected async override Task OnInitializedAsync()
    {
        
    }

    private async Task AddIndustry()
    {
        await _client.PostAsJsonAsync(EndPoints.IndustryEndpoint, industry);
        navigationManager.NavigateTo("/industry/");
    }
}

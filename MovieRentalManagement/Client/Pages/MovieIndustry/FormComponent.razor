@using MovieRentalManagement.Shared.Domain

<EditForm Model="@industry" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <fieldset disabled="@Disabled">
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText class="form-control" @bind-Value=@industry.Name></InputText>
            <ValidationMessage For="@(()=> industry.Name)"></ValidationMessage>
        </div>

    </div>
    </fieldset>

    @if(!Disabled){
    <button type="submit" class="btn btn-outline-secondary">
        <span class="oi oi-align-right"></span> @ButtonText

    </button>

    }
    

    <BackToList Target="industry"></BackToList>

</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter]public Industry industry{ get; set; }
    [Parameter]public string ButtonText { get; set; } = "Save";
    [Parameter]public EventCallback OnValidSubmit{ get; set; }
}

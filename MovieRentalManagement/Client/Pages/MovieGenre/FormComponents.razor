

<EditForm Model="@genre" OnValidSubmit="@OnValidSubmit">
     <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>

    <fieldset disabled="@Disabled">
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText class="form-control" @bind-Value="@genre.Name"></InputText>
            <ValidationMessage For="@(()=> genre.Name)"></ValidationMessage>
        </div>

    </div>
    <div class="form-group">
        <label>Created By: </label>
        <div>
            <InputText class="form-control" @bind-Value="@genre.CreatedBy"></InputText>
            <ValidationMessage For="@(()=> genre.CreatedBy)"></ValidationMessage>
        </div>

    </div>
    <div class="form-group">
        <label>Updated By: </label>
        <div>
            <InputText class="form-control" @bind-Value="@genre.UpdatedBy"></InputText>
            <ValidationMessage For="@(()=> genre.UpdatedBy)"></ValidationMessage>
        </div>

    </div>
    </fieldset>

    @if(!Disabled){
    <button type="submit" class="btn btn-outline-secondary btn-block">
        <span class="oi oi-align-right"></span> @ButtonText

    </button>

    }
    

    <BackToList Target="genre"></BackToList>
</EditForm>


@code {
    [Parameter]public bool Disabled { get; set; } = false;
    [Parameter]public Genre genre{ get; set; }
    [Parameter]public string ButtonText{ get; set; }
    [Parameter]public EventCallback OnValidSubmit{ get; set; }
}
